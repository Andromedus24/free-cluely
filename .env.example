# Environment Configuration
NODE_ENV=development

# AI/LLM Configuration
# Choose your AI provider - set only one
GEMINI_API_KEY=your_gemini_api_key_here
# OR use Ollama (local)
USE_OLLAMA=false
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Supabase Configuration (for Dashboard auth)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application Permissions
PERMISSION_SCREEN=true
PERMISSION_CLIPBOARD=false
PERMISSION_AUTOMATION=false
PERMISSION_NETWORK=true

# Automation Security
AUTOMATION_ALLOWLIST=example.com,trusted-site.com

# Application Ports
DASHBOARD_PORT=3000
ELECTRON_PORT=5180

# Telemetry & Analytics
TELEMETRY_ENABLED=false
TELEMETRY_ENDPOINT=

# Development Settings
DEV_TOOLS=false
HOT_RELOAD=true

# Security Settings
CONTEXT_ISOLATION=true
NODE_INTEGRATION=false

# Build Configuration
STATIC_EXPORT=false
MINIFY=true
SOURCE_MAPS=false

# File Paths (optional - defaults will be used if not set)
CONFIG_PATH=
LOGS_PATH=
PLUGINS_PATH=
