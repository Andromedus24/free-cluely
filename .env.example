# Free-Cluely Environment Configuration
# Copy this file to .env and configure your settings

# === Development Environment ===
NODE_ENV=development

# === LLM Configuration ===
# Gemini API Key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Configuration (for local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# === Permissions ===
# Screen capture permission (true/false)
PERMISSION_SCREEN=true

# Clipboard access permission (true/false)
PERMISSION_CLIPBOARD=false

# Browser automation permission (true/false)
PERMISSION_AUTOMATION=false

# Network access permission (true/false)
PERMISSION_NETWORK=true

# === Automation Security ===
# Comma-separated list of allowed domains for automation
# Use * for wildcards (e.g., *.example.com)
AUTOMATION_ALLOWLIST=example.com,*.trusted-domain.com

# === Dashboard Configuration ===
# Port for the Next.js dashboard
DASHBOARD_PORT=3000

# Enable/disable dashboard
DASHBOARD_ENABLED=true

# === Electron Configuration ===
# Port for Electron IPC server
ELECTRON_PORT=5180

# === Telemetry (Optional) ===
# Anonymous usage statistics (true/false)
TELEMETRY_ENABLED=false

# Telemetry endpoint (leave empty for default)
TELEMETRY_ENDPOINT=

# === Development Settings ===
# Enable Chrome DevTools in production builds
DEV_TOOLS=false

# Enable hot reload in development
HOT_RELOAD=true

# === Security Settings ===
# Context isolation (recommended: true)
CONTEXT_ISOLATION=true

# Node.js integration in renderer (recommended: false)
NODE_INTEGRATION=false

# === Build Settings ===
# Static export mode for dashboard
STATIC_EXPORT=false

# Minify production builds
MINIFY=true

# Generate source maps
SOURCE_MAPS=false

# === Supabase Configuration (for dashboard auth) ===
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# === Email Configuration (for OTP) ===
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com
