# Development Environment Configuration

# Application Settings
NODE_ENV=development
DEV_TOOLS=true
HOT_RELOAD=true

# LLM Configuration (Choose one provider)
# GEMINI_API_KEY=your_gemini_api_key_here
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=llama3.2

# Permissions (true/false)
PERMISSION_SCREEN=true
PERMISSION_CLIPBOARD=false
PERMISSION_AUTOMATION=false
PERMISSION_NETWORK=true

# Automation Security
AUTOMATION_ALLOWLIST=example.com,*.trusted-domain.com

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_ENABLED=true

# Electron Configuration
ELECTRON_PORT=5180

# Telemetry (disabled by default for privacy)
TELEMETRY_ENABLED=false

# Paths
CONFIG_PATH=./config.json
LOGS_PATH=./logs
PLUGINS_PATH=./plugins

# Build Settings
STATIC_EXPORT=false
MINIFY=false
SOURCE_MAPS=true

# Security Settings
CONTEXT_ISOLATION=true
NODE_INTEGRATION=false

# Plugin Development
PLUGIN_DEV_MODE=true
PLUGIN_AUTO_RELOAD=true

# Authentication & Database
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key